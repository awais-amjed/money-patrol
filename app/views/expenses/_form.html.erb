<%= form_with(model: expense, url: category_expenses_path(@category)) do |form| %>
  <% if expense.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

      <ul>
        <% expense.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.label 'Which category does this expense belong to?' %>
  <%= form.collection_select :category_id, @user.categories, :id, :name, selected: @category.id %>

  <div class="form-group">
    <%= form.label 'What is the name of expense?' %>
    <%= form.text_field :name, required: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label 'How much did you spend?' %>
    <%= form.number_field :amount, required: true, step: '.01', class: 'form-control' %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
